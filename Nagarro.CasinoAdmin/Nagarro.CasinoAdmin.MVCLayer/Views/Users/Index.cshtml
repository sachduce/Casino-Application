@model IEnumerable<Nagarro.CasinoAdmin.Web.Shared.UserViewModel>



<div class="container" style="margin-top:inherit; margin-bottom:2%">
    <form method="get">
        Name
        <input type="search" name="searchName" />
        Contact
        <input type="search" name="searchContact" />
        Email
        <input type="search" name="searchEmail" />
        <input type="submit" value="Search" />
    </form>
    <p>
    @Html.ActionLink("Create New", "Create")
</p>
</div>
<table class="table table-striped">
    <tr class="text-center">
       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountBalance)
        </th>
        <th>
            Recharge
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @item.DateOfBirth.ToString("dd/mm/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountBalance)
        </td>
        <td>
          <button type="button" class="btn btn-info btn-sm" data-toggle="modal"  data-target="#@item.Id">Add Amount</button>
            <div class="modal fade" id="@item.Id" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        @using (Html.BeginForm("RechargeMoney", "Users", new { id = item.Id }, FormMethod.Post, null))
                        {
                            <div class="modal-header">
                                <h4 class="modal-title">Enter Amount</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <p>
                                        Amount  :
                                        <div class="input-field col s6">
                                            <input placeholder="Placeholder" name="amount" type="number" class="form-control validate">
                                        </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" class="btn btn-default" value="Submit" />
                            </div>
                        }
                    </div>
                </div>
            </div>

</td>
        
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
            
        </td>
    </tr>
}
    

</table>

